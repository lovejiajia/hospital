<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.dao.PaibanDao">

    <resultMap type="com.aaa.entity.Paiban" id="PaibanMap">
        <result property="paiid" column="paiId" jdbcType="INTEGER"/>
        <result property="one" column="one" jdbcType="VARCHAR"/>
        <result property="two" column="two" jdbcType="VARCHAR"/>
        <result property="three" column="three" jdbcType="VARCHAR"/>
        <result property="four" column="four" jdbcType="VARCHAR"/>
        <result property="five" column="five" jdbcType="VARCHAR"/>
        <result property="six" column="six" jdbcType="VARCHAR"/>
        <result property="seven" column="seven" jdbcType="VARCHAR"/>
        <result property="doctorid" column="doctorId" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询指定行数据-->
    <select id="findAllPaiban" resultMap="PaibanMap">
        select
          paiId, one, two, three, four, five, six, seven, doctorId,doctorName
        from doctor LEFT JOIN paiban ON doctorId = doctorId
        <where>
            <if test="doctorName != null">
                and doctorName like concat('%',#{name,jdbcType=VARCHAR},'%')
            </if>
        </where>
    </select>

    <!--是否有此医生排班-->
    <select id="countPaiban" resultType="java.lang.Long">
        select count(doctorId)
        from paiban
        where doctorId = #{docrotid}
    </select>

    <!--新增所有列-->
    <insert id="insertPaiban" keyProperty="paiid" useGeneratedKeys="true">
        insert into paiban(one, two, three, four, five, six, seven, doctorId)
        values (#{one}, #{two}, #{three}, #{four}, #{five}, #{six}, #{seven}, #{doctorid})
    </insert>


    <!--通过主键修改数据-->
    <update id="updatePaiban">
        update paiban
        <set>
            <if test="one != null and one != ''">
                one = #{one},
            </if>
            <if test="two != null and two != ''">
                two = #{two},
            </if>
            <if test="three != null and three != ''">
                three = #{three},
            </if>
            <if test="four != null and four != ''">
                four = #{four},
            </if>
            <if test="five != null and five != ''">
                five = #{five},
            </if>
            <if test="six != null and six != ''">
                six = #{six},
            </if>
            <if test="seven != null and seven != ''">
                seven = #{seven},
            </if>
        </set>
        where paiId = #{paiid}
    </update>

    <!--通过主键删除-->
    <delete id="delectPaiban">
        delete from paiban where paiId = #{paiid}
    </delete>

</mapper>

