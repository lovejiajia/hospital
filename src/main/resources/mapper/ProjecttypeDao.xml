<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.dao.ProjecttypeDao">

    <resultMap type="com.aaa.entity.Projecttype" id="ProjecttypeMap">
        <result property="projectid" column="projectId" jdbcType="INTEGER"/>
        <result property="projectname" column="projectName" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="ProjecttypeMap">
        select
          projectId, projectName
        from projecttype
        where projectId = #{projectid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="ProjecttypeMap">
        select
          projectId, projectName
        from projecttype
        <where>
            <if test="projectid != null">
                and projectId = #{projectid}
            </if>
            <if test="projectname != null and projectname != ''">
                and projectName = #{projectname}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from projecttype
        <where>
            <if test="projectid != null">
                and projectId = #{projectid}
            </if>
            <if test="projectname != null and projectname != ''">
                and projectName = #{projectname}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="projectid" useGeneratedKeys="true">
        insert into projecttype(projectName)
        values (#{projectname})
    </insert>

    <insert id="insertBatch" keyProperty="projectid" useGeneratedKeys="true">
        insert into projecttype(projectName)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.projectname})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="projectid" useGeneratedKeys="true">
        insert into projecttype(projectName)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.projectname})
        </foreach>
        on duplicate key update
        projectName = values(projectName)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update projecttype
        <set>
            <if test="projectname != null and projectname != ''">
                projectName = #{projectname},
            </if>
        </set>
        where projectId = #{projectid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from projecttype where projectId = #{projectid}
    </delete>

</mapper>

