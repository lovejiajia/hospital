<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.dao.MoneytypeDao">

    <resultMap type="com.aaa.entity.Moneytype" id="MoneytypeMap">
        <result property="moneyid" column="MoneyId" jdbcType="INTEGER"/>
        <result property="moneytype" column="Moneytype" jdbcType="VARCHAR"/>
        <result property="percent" column="Percent" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="MoneytypeMap">
        select
          MoneyId, Moneytype, Percent
        from moneytype
        where MoneyId = #{moneyid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="MoneytypeMap">
        select
          MoneyId, Moneytype, Percent
        from moneytype
        <where>
            <if test="moneyid != null">
                and MoneyId = #{moneyid}
            </if>
            <if test="moneytype != null and moneytype != ''">
                and Moneytype = #{moneytype}
            </if>
            <if test="percent != null and percent != ''">
                and Percent = #{percent}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from moneytype
        <where>
            <if test="moneyid != null">
                and MoneyId = #{moneyid}
            </if>
            <if test="moneytype != null and moneytype != ''">
                and Moneytype = #{moneytype}
            </if>
            <if test="percent != null and percent != ''">
                and Percent = #{percent}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="moneyid" useGeneratedKeys="true">
        insert into moneytype(Moneytype, Percent)
        values (#{moneytype}, #{percent})
    </insert>

    <insert id="insertBatch" keyProperty="moneyid" useGeneratedKeys="true">
        insert into moneytype(Moneytype, Percent)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.moneytype}, #{entity.percent})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="moneyid" useGeneratedKeys="true">
        insert into moneytype(Moneytype, Percent)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.moneytype}, #{entity.percent})
        </foreach>
        on duplicate key update
        Moneytype = values(Moneytype),
        Percent = values(Percent)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update moneytype
        <set>
            <if test="moneytype != null and moneytype != ''">
                Moneytype = #{moneytype},
            </if>
            <if test="percent != null and percent != ''">
                Percent = #{percent},
            </if>
        </set>
        where MoneyId = #{moneyid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from moneytype where MoneyId = #{moneyid}
    </delete>

</mapper>

