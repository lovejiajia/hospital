<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.dao.DepartmentsDao">

    <resultMap type="com.aaa.entity.Departments" id="DepartmentsMap">
        <result property="departmentid" column="departmentId" jdbcType="INTEGER"/>
        <result property="department" column="department" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="DepartmentsMap">
        select
          departmentId, department
        from departments
        where departmentId = #{departmentid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="DepartmentsMap">
        select
          departmentId, department
        from departments
        <where>
            <if test="departmentid != null">
                and departmentId = #{departmentid}
            </if>
            <if test="department != null and department != ''">
                and department = #{department}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from departments
        <where>
            <if test="departmentid != null">
                and departmentId = #{departmentid}
            </if>
            <if test="department != null and department != ''">
                and department = #{department}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="departmentid" useGeneratedKeys="true">
        insert into departments(department)
        values (#{department})
    </insert>

    <insert id="insertBatch" keyProperty="departmentid" useGeneratedKeys="true">
        insert into departments(department)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.department})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="departmentid" useGeneratedKeys="true">
        insert into departments(department)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.department})
        </foreach>
        on duplicate key update
        department = values(department)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update departments
        <set>
            <if test="department != null and department != ''">
                department = #{department},
            </if>
        </set>
        where departmentId = #{departmentid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from departments where departmentId = #{departmentid}
    </delete>

</mapper>

