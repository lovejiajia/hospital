<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.dao.RegisteredtypeDao">

    <resultMap type="com.aaa.entity.Registeredtype" id="RegisteredtypeMap">
        <result property="registeredid" column="registeredId" jdbcType="INTEGER"/>
        <result property="type" column="type" jdbcType="VARCHAR"/>
        <result property="price" column="price" jdbcType="VARCHAR"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="RegisteredtypeMap">
        select
          registeredId, type, price
        from registeredtype
        where registeredId = #{registeredid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="RegisteredtypeMap">
        select
          registeredId, type, price
        from registeredtype
        <where>
            <if test="registeredid != null">
                and registeredId = #{registeredid}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from registeredtype
        <where>
            <if test="registeredid != null">
                and registeredId = #{registeredid}
            </if>
            <if test="type != null and type != ''">
                and type = #{type}
            </if>
            <if test="price != null">
                and price = #{price}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="registeredid" useGeneratedKeys="true">
        insert into registeredtype(type, price)
        values (#{type}, #{price})
    </insert>

    <insert id="insertBatch" keyProperty="registeredid" useGeneratedKeys="true">
        insert into registeredtype(type, price)
        values
        <foreach collection="entities" item="entity" separator=",">
        (#{entity.type}, #{entity.price})
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="registeredid" useGeneratedKeys="true">
        insert into registeredtype(type, price)
        values
        <foreach collection="entities" item="entity" separator=",">
            (#{entity.type}, #{entity.price})
        </foreach>
        on duplicate key update
        type = values(type),
        price = values(price)
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update registeredtype
        <set>
            <if test="type != null and type != ''">
                type = #{type},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
        </set>
        where registeredId = #{registeredid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from registeredtype where registeredId = #{registeredid}
    </delete>

</mapper>

