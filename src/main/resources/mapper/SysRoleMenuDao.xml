<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.aaa.dao.SysRoleMenuDao">

    <resultMap type="com.aaa.entity.SysRoleMenu" id="SysRoleMenuMap">
        <result property="rid" column="rid" jdbcType="INTEGER"/>
        <result property="mid" column="mid" jdbcType="INTEGER"/>
    </resultMap>

    <!--查询单个-->
    <select id="queryById" resultMap="SysRoleMenuMap">
        select
          rid, mid
        from sys_role_menu
        where rid = #{rid}
    </select>

    <!--查询指定行数据-->
    <select id="queryAllByLimit" resultMap="SysRoleMenuMap">
        select
          rid, mid
        from sys_role_menu
        <where>
            <if test="rid != null">
                and rid = #{rid}
            </if>
            <if test="mid != null">
                and mid = #{mid}
            </if>
        </where>
        limit #{pageable.offset}, #{pageable.pageSize}
    </select>

    <!--统计总行数-->
    <select id="count" resultType="java.lang.Long">
        select count(1)
        from sys_role_menu
        <where>
            <if test="rid != null">
                and rid = #{rid}
            </if>
            <if test="mid != null">
                and mid = #{mid}
            </if>
        </where>
    </select>

    <!--新增所有列-->
    <insert id="insert" keyProperty="rid" useGeneratedKeys="true">
        insert into sys_role_menu()
        values ()
    </insert>

    <insert id="insertBatch" keyProperty="rid" useGeneratedKeys="true">
        insert into sys_role_menu()
        values
        <foreach collection="entities" item="entity" separator=",">
        ()
        </foreach>
    </insert>

    <insert id="insertOrUpdateBatch" keyProperty="rid" useGeneratedKeys="true">
        insert into sys_role_menu()
        values
        <foreach collection="entities" item="entity" separator=",">
            ()
        </foreach>
        on duplicate key update
        
    </insert>

    <!--通过主键修改数据-->
    <update id="update">
        update sys_role_menu
        <set>
        </set>
        where rid = #{rid}
    </update>

    <!--通过主键删除-->
    <delete id="deleteById">
        delete from sys_role_menu where rid = #{rid}
    </delete>

</mapper>

